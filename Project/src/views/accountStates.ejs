<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

  <!-- Referencia al archivo de estilos CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <title>Estado de cuenta</title>

</head>

<body>
  <div class="container mt-3 mb-2">
    <nav class="navbar navbar-dark" style="background: #424242;">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1 col-0">Estados de cuenta</span>
        <form id="listAccountState" action="/accountStates"  class="form-inline" method="POST">
          </form>
      </div>
    </nav>
  </div>

  <!-- Tabla que contiene las facturas -->
  <div class="container mt-4">
    <h2 class="mb-4">Estados de cuentas</h2>

    <!-- Tabla de facturas -->
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Total Minutos llamadas entrantes</th>
          <th scope="col">Total Minutos llamadas salientes</th>
        </tr>
      </thead>
      <tbody>
        <% accountStates.forEach(accountState=> { %>
          <tr>
            <td><%= accountState.TotalMinInput %></td>
            <td><%= accountState.TotalMinOutput %></td>
            <td class="cont-center">
              <form class="ml-2" action="" method="GET">
                <a title="Ver detalles" class="btn btn-outline-light ml-2"><i
                    class='bx bxs-edit'></i></a>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>


</body>

</html>