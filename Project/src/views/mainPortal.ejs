<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

  <!-- Referencia al archivo de estilos CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <title>Lista de facturas</title>

</head>

<body>
  <div class="container mt-3 mb-2">
    <nav class="navbar navbar-dark" style="background: #424242;">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1 col-0">Facturas</span>
        <form id="CheckNumberPhone" action="/portal"  class="form-inline" method="POST">
          <input class="form-control mr-sm-2" type="search" name="SearchNumber"
            placeholder="Buscar...">
          <button title="Buscar" class="btn btn-outline-light my-2 my-sm-0 mr-sm-2" type="submit"><i
              class='bx bx-search'></i></button>
          </form>
      </div>
    </nav>
  </div>

  <!-- Tabla que contiene las facturas -->
  <div class="container mt-4">
    <h2 class="mb-4">Facturas</h2>

    <!-- Tabla de facturas -->
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Fecha de la Factura</th>
          <th scope="col">Fecha de Pago</th>
          <th scope="col">Estado</th>
          <th scope="col">Total a Pagar</th>
        </tr>
      </thead>
      <tbody>
        <% invoices.forEach(invoice=> { %>
          <tr>
            <td><%= invoice.InvoiceDay.toISOString().slice(0, 10) %></td>
            <td><%= invoice.PaymentDate.toISOString().slice(0, 10) %></td>
            <td><%= invoice.IsPending ? 'Pendiente' : 'Pagada' %></td>
            <td>$ <%= invoice.Total.toFixed(2) %></td>
            <td class="cont-center">
              <form class="ml-2" action="" method="GET">
                <a title="Ver detalles" class="btn btn-outline-light ml-2"><i
                    class='bx bxs-edit'></i></a>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>


  <!-- Boton que permite desplegar ventana emergente -->
  <div class="dropdown">
    <button class="btn btn-outline-light bg-dark dropdown-toggle" type="button" data-bs-toggle="dropdown"
      aria-expanded="false" title="Estados de cuenta" style="position: fixed; top: 7%; left: 3%;">
      <i class='bx bx-list-ul'></i>
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item btn-outline-dark">Cuenta empresa Y</a></li>
      <li><a class="dropdown-item btn-outline-dark">Cuenta empresa X</a></li>
    </ul>
  </div>

</body>

</html>