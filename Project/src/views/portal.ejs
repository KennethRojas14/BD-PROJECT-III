<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

  <!-- Referencia al archivo de estilos CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>

  <title>Portal principal</title>

</head>

<body>

  <!-- form con input y boton para realizar busqueda por numero de telefono -->
  <div class="container mb-2" style="margin-top: 4%;">
    <nav class="navbar bg-dark" style="color: aliceblue;">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h3 col-2">Numero de tel√©fono:</span>
        
        <form id="CheckNumberPhone" action="/portal"  class="form-inline" method="POST">
          <input class="form-control mr-sm-2" type="search" name="SearchNumber"
            placeholder="Buscar..." required>
          <button title="Buscar" class="btn btn-outline-light my-2 my-sm-0 mr-sm-2" type="submit"><i
              class='bx bx-search'></i></button>
        </form>
        
        
          <!-- <form class="form-inline">

            <input class="form-control mr-sm-2 col-9" type="search" name="contentSearch" placeholder="Buscar...">
            <button title="Buscar" class="btn btn-outline-light col-2 ml-1" type="submit"><i
                class='bx bx-search'></i></button>

          </form> -->
      </div>
    </nav>
  </div>

  <!-- Tabla que contiene las facturas -->
  <div class="container mt-3">
    <h5>Facturas:</h5>
    <table class="table table-hover table-dark">
      <thead class="thead-dark"></thead>
      <tr>
        <th scope="col">Fecha</th>
        <th scope="col">Total a Pagar (Sin IVA)</th>
        <th scope="col">Total a Pagar (Con IVA)</th> 
        <th scope="col">Fecha de Pago</th> 
        <th scope="col">Pendiente</th> 
        <th class="cont-center" scope="col">Detalles</th>
      </tr>
      </thead>
      <tbody>
        <% invoices.forEach(invoice=> { %>
          <tr>
            <td><%= invoice.InvoiceDay.toISOString().slice(0, 10) %></td>
            <td>$ <%= invoice.TotalWithOutFC.toFixed(2) %></td>
            <td>$ <%= invoice.TotalWithFC.toFixed(2) %></td>
            <td><%= invoice.PaymentDate.toISOString().slice(0, 10) %></td>
            <td><%= invoice.IsPending ? 'Pendiente' : 'Pagada' %></td>
            <td class="cont-center"> 
                <a href='/InvoiceDetail' title="Ver detalles factura" class="btn btn-outline-light ml-2">
                  <i class='bx bx-list-ul'></i></a>

                <a href='/InvoiceDetail' title="Ver detalles llamadas" class="btn btn-outline-light ml-2">
                  <i class='bx bx-list-ul'></i></a>

                <a href='/InvoiceDetail' title="Ver detalles elementos" class="btn btn-outline-light ml-2">
                  <i class='bx bx-list-ul'></i></a>
          </tr>
        <% }); %>
      </tbody>
    </table>

  </div>

  <!-- Boton que permite desplegar ventana emergente -->
  <div class="dropdown">
    <button class="btn btn-outline-light bg-dark dropdown-toggle" type="button" data-bs-toggle="dropdown"
      aria-expanded="false" title="Estados de cuenta" style="position: fixed; top: 7%; left: 3%;">
      <i class='bx bx-list-ul'></i>
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item btn-outline-dark">Cuenta empresa Y</a></li>
      <li><a class="dropdown-item btn-outline-dark">Cuenta empresa X</a></li>
    </ul>
  </div>

</body>

</html>