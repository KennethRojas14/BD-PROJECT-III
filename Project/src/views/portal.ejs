<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

  <!-- Referencia al archivo de estilos CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>

  <title>Portal principal</title>

</head>

<body>

  <!-- form con input y boton para realizar busqueda por numero de telefono -->
  <div class="container mb-2" style="margin-top: 4%;">
    <nav class="navbar bg-dark" style="color: aliceblue;">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1 col-0">Facturas</span>
        <form id="CheckNumberPhone" action="/portal"  class="form-inline" method="POST">
          <input class="form-control mr-sm-2" type="search" name="SearchNumber"
            placeholder="Buscar...">
          <button title="Buscar" class="btn btn-outline-light my-2 my-sm-0 mr-sm-2" type="submit"><i
              class='bx bx-search'></i></button>

        </form>
      </div>
    </nav>
  </div>

  <!-- Tabla que contiene las facturas -->
  <div class="container mt-3">
    <h5>Facturas:</h5>
    <table class="table table-hover table-dark">
      <thead class="thead-dark"></thead>
      <tr>
          <th scope="col">Fecha de la Factura</th>
          <th scope="col">Fecha de Pago</th>
          <th scope="col">Estado</th>
          <th scope="col">Total a Pagar</th>
        </tr>
      </thead>
      <tbody>
        <% invoices.forEach(invoice=> { %>
          <tr>
            <td><%= invoice.InvoiceDay.toISOString().slice(0, 10) %></td>
            <td><%= invoice.PaymentDate.toISOString().slice(0, 10) %></td>
            <td><%= invoice.IsPending ? 'Pendiente' : 'Pagada' %></td>
            <td>$ <%= invoice.Total.toFixed(2) %></td>
            <td class="cont-center">
              <form class="ml-2" action="" method="GET">
                <a title="Ver detalles" class="btn btn-outline-light ml-2"><i
                    class='bx bxs-edit'></i></a>
          </tr>
        <% }); %>
      </tbody>
    </table>

  </div>

<div class="dropdown">
  <form id="CheckAccountState" action="/accountStates" class="form-inline" method="POST">
    <button class="btn btn-outline-light bg-dark dropdown-toggle" type="button" data-bs-toggle="dropdown"
      aria-expanded="false" title="Estados de cuenta" style="position: fixed; top: 7%; left: 3%;">
      <i class='bx bx-list-ul'></i>
    </button>
    <ul class="dropdown-menu">
      <li><a href="/accountStates" class="dropdown-item btn-outline-dark" href="#">Cuenta empresa Y</a></li>
      <li><a href="/accountStates" class="dropdown-item btn-outline-dark" href="#">Cuenta empresa X</a></li>
    </ul>
  </form>
</div>

</body>

</html>